{
  "name": "ekscss-repl",
  "version": "0.0.31",
  "description": "REPL web app to live compile XCSS into CSS with ekscss",
  "repository": "maxmilton/ekscss-repl",
  "author": "Max Milton <max@happyhackers.xyz>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production bun build.ts",
    "dev": "NODE_ENV=development bun build.ts",
    "lint": "bun lint:fmt && bun lint:css && bun lint:js && bun lint:ts",
    "lint:css": "stylelint '**/*.{css,xcss}'",
    "lint:fmt": "biome check --diagnostic-level=warn",
    "lint:js": "eslint",
    "lint:ts": "tsc --noEmit",
    "serve": "bun http.ts",
    "test": "bun test",
    "test:e2e": "playwright test",
    "test:e2e:debug": "bun test:e2e --debug",
    "test:e2e:ui": "bun test:e2e --ui"
  },
  "dependencies": {
    "@ekscss/framework": "0.0.52",
    "ekscss": "0.0.20",
    "stage1": "0.8.0-next.16"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@eslint/js": "9.23.0",
    "@maxmilton/eslint-config": "0.0.9",
    "@maxmilton/stylelint-config": "0.2.0",
    "@maxmilton/test-utils": "0.0.8",
    "@playwright/test": "1.51.1",
    "@types/bun": "1.2.8",
    "@types/csso": "5.0.4",
    "@types/eslint-plugin-security": "3.0.0",
    "csso": "5.0.5",
    "eslint": "9.23.0",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-unicorn": "58.0.0",
    "happy-dom": "17.4.4",
    "lightningcss": "1.29.3",
    "purgecss": "7.0.2",
    "stylelint": "16.17.0",
    "stylelint-config-standard": "37.0.0",
    "terser": "5.39.0",
    "trackx": "0.6.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.29.0"
  }
}
